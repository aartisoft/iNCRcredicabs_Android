<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dashboard_linerarParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d8cbfe9"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Dashboard.Dashboard"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_dashboard">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="5"
        android:backgroundTint="#ffffff"
        android:elevation="8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:padding="@dimen/linear_parentlayout_padding"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_currentShift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/shift_time_text_margin"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Your Current Shift is 10AM - 7PM"
                    android:textSize="@dimen/shift_time_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Emp_QLid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="5dp"
                        android:text="EMP Id: GS265369"
                        android:textSize="@dimen/employee_details_text_size" />

                    <TextView
                        android:id="@+id/Emp_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="5dp"
                        android:text="EMP Id: Mridul Upadhayaya"
                        android:textSize="@dimen/employee_details_text_size" />

                    <TextView
                        android:id="@+id/Emp_homeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="5dp"
                        android:text="Current Address: sector 48,Gurgaon"
                        android:textSize="@dimen/employee_details_text_size" />

                    <TextView
                        android:id="@+id/Emp_contactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="5dp"
                        android:text="Phone No: 78343225684"
                        android:textSize="@dimen/employee_details_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button_sos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/sos_button_margin"
                        android:layout_weight="1"
                        android:background="@drawable/sos_icon"
                        android:elevation="5dp"
                        android:textSize="@dimen/sos_button_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/ci_co_parent_margin_bottom"
                android:layout_marginTop="@dimen/ci_co_parent_margin_top"
                android:layout_weight="3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_checkIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/checkin_btn_marginbottom"
                    android:layout_marginLeft="@dimen/checkin_btn_marginleft"
                    android:layout_marginRight="@dimen/checkin_btn_marginRight"
                    android:layout_marginTop="@dimen/checkin_btn_margintop"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    android:background="@drawable/button_dashboard"
                    android:drawableLeft="@drawable/checkin"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/checkin_btn_padding_left"
                    android:text=" CHECK IN"
                    android:textColor="#ffffff"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:textSize="@dimen/checkIn_btn_size" />

                <Button
                    android:id="@+id/button_checkOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/checkout_btn_margin_bottom"
                    android:layout_marginLeft="@dimen/checkout_btn_margin_left"
                    android:layout_marginRight="@dimen/checkout_btn_margin_right"
                    android:layout_marginTop="@dimen/checkout_btn_margin_top"
                    android:layout_weight="1"
                    android:background="@drawable/button_dashboard"
                    android:drawableLeft="@drawable/checkout"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/checkout_btn_padding_left"
                    android:text=" CHECK OUT"
                    android:textColor="#ffffff"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:textSize="@dimen/checkout_btn_size" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        android:elevation="6dp"
        android:layout_margin="4dp"
        android:layout_weight="4"
        >
        <TextView
            android:id="@+id/textView_NOcabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Cab Mates Details as you're not in any Cabs"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="22sp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/button_complaint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_dashboard"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/complaints"
                android:paddingLeft="@dimen/complaints_btn_padding_left"
                android:text="  COMPLAINTS"
                android:hapticFeedbackEnabled="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/complaints_btn_size"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/cabrequest"
                android:paddingLeft="@dimen/request_btn_padding_left"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:background="@drawable/button_dashboard"
                android:gravity="center_vertical"
                android:text="  REQUEST CAB"
                android:textColor="#ffffff"
                android:textSize="@dimen/request_btn_size"
                android:textStyle="bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
